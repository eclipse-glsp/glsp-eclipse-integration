{
  "extends": "./configs/base.tsconfig",
  "compilerOptions": {
    "skipLibCheck": false,
    "baseUrl": ".",
    "paths": {
      "@eclipse-glsp-examples/workflow-webapp": [
        "examples/workflow-webapp/src/*"
      ],
      "@eclipse-glsp/ide": [
        "packages/ide/src/*"
      ]
    },
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "include": [
    "packages/*/src",
    "examples/*/src"
  ]
}
